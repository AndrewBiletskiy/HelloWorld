html(lang="en")
    head
        title Calculator
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no")
        link(href="css/main.css" rel="stylesheet" type="text/css")
    body
        #calc
            header
                input(value='0', disabled, type='text')#display
            main
                #button
                    button.btm.number 7
                    button.btm.number 8
                    button.btm.number 9
                    button.btm.operator -
                    button.btm.number 4
                    button.btm.number 5
                    button.btm.number 6
                    button.btm.operator +
                    button.btm.number 1
                    button.btm.number 2
                    button.btm.number 3
                    button.btm.operator /
                    button.btm.number 0
                    button.btm#decimal .
                    button.btm.operator *
                    button.btm#CE CE
                    button.btm.operator#equally =

    script(src="js/main.js")




































